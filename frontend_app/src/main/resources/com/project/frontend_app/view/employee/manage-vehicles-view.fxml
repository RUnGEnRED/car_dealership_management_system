<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="650.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.frontend_app.controller.employee.ManageVehilcesController">

    <!-- Header -->
    <top>
        <Label text="Vehicle Management" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
            <BorderPane.margin>
                <Insets top="15.0" bottom="15.0" />
            </BorderPane.margin>
        </Label>
    </top>

    <!-- Center - Vehicle Table and Delete Button -->
    <center>
        <VBox spacing="10.0" alignment="TOP_CENTER">
            <TableView fx:id="vehicleTable" prefHeight="300.0">
                <columns>
                    <TableColumn fx:id="vinColumn" text="VIN" prefWidth="120.0" />
                    <TableColumn fx:id="makeColumn" text="Make" prefWidth="100.0" />
                    <TableColumn fx:id="modelColumn" text="Model" prefWidth="100.0" />
                    <TableColumn fx:id="yearColumn" text="Year" prefWidth="60.0" />
                    <TableColumn fx:id="mileageColumn" text="Mileage" prefWidth="80.0" />
                    <TableColumn fx:id="conditionColumn" text="Condition" prefWidth="70.0" />
                    <TableColumn fx:id="priceColumn" text="Price (PLN)" prefWidth="100.0" />
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="150.0" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <Button fx:id="deleteVehicleButton" text="Delete Vehicle" onAction="#handleDeleteVehicle" />
        </VBox>
    </center>

    <!-- Bottom - Vehicle Add Form -->
    <bottom>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="10.0" bottom="20.0" left="10.0" right="10.0" />
            </BorderPane.margin>
            <children>
                <Label text="Add New Vehicle">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="100.0" />
                        <ColumnConstraints prefWidth="200.0" />
                        <ColumnConstraints prefWidth="100.0" />
                        <ColumnConstraints prefWidth="200.0" />
                    </columnConstraints>

                    <!-- Row 1 -->
                    <children>
                        <Label text="VIN:" />
                        <TextField fx:id="vinField" GridPane.columnIndex="1" />
                        <Label text="Make:" GridPane.columnIndex="2" />
                        <TextField fx:id="makeField" GridPane.columnIndex="3" />

                        <!-- Row 2 -->
                        <Label text="Model:" GridPane.rowIndex="1" />
                        <TextField fx:id="modelField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Year:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <TextField fx:id="yearField" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <!-- Row 3 -->
                        <Label text="Mileage:" GridPane.rowIndex="2" />
                        <TextField fx:id="mileageField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Equipment:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <TextField fx:id="equipmentField" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                        <!-- Row 4 -->
                        <Label text="Condition:" GridPane.rowIndex="3" />
                        <ComboBox fx:id="conditionBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Price (PLN):" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                        <TextField fx:id="priceField" GridPane.columnIndex="3" GridPane.rowIndex="3" />

                        <!-- Row 5 -->
                        <Label text="Description:" GridPane.rowIndex="4" />
                        <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="3" />
                    </children>
                </GridPane>

                <!-- Buttons -->
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button fx:id="saveVehicleButton" text="Add Vehicle" onAction="#handleSaveVehicle" />
                        <Button fx:id="closeButton" text="Close" onAction="#handleClose" cancelButton="true" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
