<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>

<!--
  View for displaying the list of customers.
  Controller: com.project.frontend_app.controller.employee.CustomerListController
-->

<?import javafx.scene.layout.HBox?>
<BorderPane prefHeight="400.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.frontend_app.controller.employee.CustomerListController">
    <!-- Header -->
    <top>
        <Label text="Customers" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
            <BorderPane.margin>
                <Insets bottom="15.0" top="15.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <!-- Content area -->
    <center>
        <!-- Customer Table -->
        <TableView fx:id="customersTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="120.0" text="ID" />
                <TableColumn fx:id="firstNameColumn" prefWidth="100.0" text="First name" />
                <TableColumn fx:id="lastNameColumn" prefWidth="100.0" text="Last name" />
                <TableColumn fx:id="phoneNumberColumn" prefWidth="60.0" text="Phone number" />
                <TableColumn fx:id="emailColumn" prefWidth="80.0" text="email" />
                <TableColumn fx:id="streetColumn" prefWidth="150.0" text="Street" />
                <TableColumn fx:id="houseNumberColumn" prefWidth="100.0" text="House Number" />
                <TableColumn fx:id="apartmentColumn" prefWidth="100.0" text="Apartment" />
                <TableColumn fx:id="cityColumn" prefWidth="100.0" text="City" />
                <TableColumn fx:id="postalCodeColumn" prefWidth="100.0" text="Postal Code" />

            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </BorderPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <!-- Close button -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
            <children>
                <Button text="Add new customer" onAction="#handleAddCustomer" />
                <Button text="Edit customer's profile" onAction="#handleEditProfile" />
                <Button text="Close" onAction="#handleClose" />
            </children>
            <padding>
                <Insets bottom="10.0" right="10.0" top="10.0" left="10.0"/>
            </padding>
        </HBox>
    </bottom>

</BorderPane>