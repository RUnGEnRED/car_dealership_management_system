<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<!--
  View for displaying the form to add a new customer.
  Controller: com.project.frontend_app.controller.employee.AddCustomerController
-->

<?import javafx.scene.layout.HBox?>
<VBox spacing="10.0" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/17"
      prefHeight="450.0" prefWidth="600.0"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.project.frontend_app.controller.employee.AddCustomerController">

    <Label text="Add New Customer">
        <font>
            <Font size="18.0" name="System Bold"/>
        </font>
        <VBox.margin>
            <Insets top="20" bottom="10"/>
        </VBox.margin>
    </Label>

    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets left="20" right="20" top="10" bottom="10"/>
        </padding>

        <!-- Personal Info -->
        <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Phone Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Address Info -->
        <Label text="Street:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="streetField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="House Number:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="houseNumberField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Apartment Number:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="apartmentField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="City:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="cityField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Postal Code:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <TextField fx:id="postalCodeField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <VBox.margin>
            <Insets left="20" top="10"/>
        </VBox.margin>
        <Button text="Save Customer" onAction="#handleSaveCustomer"/>
        <Button text="Close" onAction="#handleClose"/>
    </HBox>

</VBox>
